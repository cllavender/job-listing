<div class="col-md-8 col-centered" >
  <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <h3>
        求职专区
        <div class="dropdown clearfix  pull-right">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown">
            排序
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
            <li>
              <%= link_to("按薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
            </li>
            <li>
              <%= link_to("按薪资上限排序", jobs_path(:order => "by_upper_bound")) %>
            </li>
            <li>
              <%= link_to("按发表时间排序", jobs_path(:order => "by_created_at")) %>
            </li>
          </ul>
        </div>
      </h3>
    </h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>职缺</th>
            <th>薪资下限</th>
            <th>薪资上限</th>
            <th>刊登时间</th>
          </tr>
        </thead>
        <tbody>
          <% @jobs.each do |job| %>
          <tr>
            <td><%=link_to(job.title, job_path(job)) %></td>
            <td><%= job.wage_lower_bound %></td>
            <td><%= job.wage_upper_bound %></td>
            <td><%= job.created_at %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
