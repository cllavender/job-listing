<div class="col-md-12">

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Last Update</th>
        <th>Creator</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td>(public)<%=link_to(job.title, job_path(job)) %></td>
        <td><%= job.created_at %></td>
        <td><%= job.user.email %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
