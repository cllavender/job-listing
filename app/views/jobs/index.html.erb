<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a Job", new_job_path, class: "btn btn-default pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="2"></th>
        <th>Last Update</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td><%=link_to(job.title, job_path(job)) %></title></td>
        <td><%= link_to("Edit", edit_job_path(job), class: "btn btn-default btn-xs") %></td>
        <td><%= link_to("Destroy", job_path(job), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></td>
        <td><%= job.created_at %></title></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
