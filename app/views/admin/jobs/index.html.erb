<div class="col-md-12" >
  <div class="row box">
    <div class="box-inner col-md-10 col-md-offset-3 col-centered">
      <div class="panel panel-success">
        <div class="panel-heading ">
          <h3 class="panel-title">
            <h3>
              职缺管理专区
            </h3>
          </h3>
        </div>
        <div class="panel-body">
          <div class="job">
            <%= link_to("新增职缺", new_admin_job_path, class: "btn btn-info pull-right") %>
          </div>
          <div class="col-md-12">
            <% @jobs.each do |job| %>
              <div class="row">
                <div class="col-md-6">
                  <%= render_job_status(job) %>
                  <%=link_to(job.title, job_path(job),:style => "color:#1565C0") %>
                </div>
                <div class="col-md-6">
                    <%= link_to edit_admin_job_path(job), class: "btn btn-xs btn-info" do %><i class="fa fa-pencil"></i><% end %>
                    <%= link_to admin_job_path(job), :method => :delete, :class => "btn btn-xs  btn-danger", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>
                    <% if job.is_hidden %>
                        <%= link_to publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success" do %><i class="fa fa-eye"></i><% end %>
                    <% else %>
                        <%= link_to hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-warning" do %><i class="fa fa-eye-slash"></i><% end %>
                    <% end %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-3">
                  <p><span class="glyphicon glyphicon-yen"></span> <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %> </p>
                </div>
                <div class="col-md-3">
                  <p><i class="fa fa-address-card-o" aria-hidden="true"></i>  <%= job.job_type %></p>
                </div>
                <div class="col-md-3 col-sm-6">
                  <span class="glyphicon glyphicon-time"></span> <%= job.created_at %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-3 col-sm-6">
                  <span><i class="fa fa-user-circle-o" aria-hidden="true"></i>  <%= job.company_name %></span>
                </div>
                <div class="col-md-3 col-sm-6">
                  <span class="glyphicon glyphicon-map-marker"></span> <%= job.location %>
                </div>
                <div class="col-md-3 col-sm-6">
                  <span class="glyphicon glyphicon-file"></span> <%= job.resumes.count %>
                </div>
              </div>
              <hr style=" borber:2px blue solid; " />
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
